<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".personalFinancialManagementModule.pFMFragments.SavingsFragment">


    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cv_savings"
        android:layout_width="match_parent"
        app:cardElevation="5dp"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp"
                    card_view:cardBackgroundColor="@color/dark_green"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/linear_layout_2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingVertical="20dp">

                        <ImageView
                            android:src="@drawable/baseline_star_24"
                            android:contentDescription="Profit"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginVertical="5dp"
                            card_view:tint="@color/yellow" />

                        <LinearLayout
                            android:id="@+id/linear_layout_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="Total Deposit"
                                android:textColor="@color/white"
                                />

                            <TextView
                                android:id="@+id/tv_deposit_total"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:text="₱XX,XXX.XX"
                                android:textColor="@color/white"
                                android:gravity="start"
                                android:textStyle="bold"/>
                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="20dp"
                    card_view:cardBackgroundColor="@color/light_green"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/linear_layout_3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingVertical="20dp">

                        <ImageView
                            android:src="@drawable/baseline_wallet_24"
                            android:contentDescription="Profit"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginVertical="5dp"
                            card_view:tint="@color/dark_green" />

                        <LinearLayout
                            android:id="@+id/linear_layout_text1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginLeft="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="Total Withdraw"
                                android:textColor="@color/white"
                                />

                            <TextView
                                android:id="@+id/tv_withdrawal_total"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:text="₱XX,XXX.XX"
                                android:textColor="@color/white"
                                android:gravity="start"
                                android:textStyle="bold"/>
                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>



            </LinearLayout>


            <TextView
                android:id="@+id/tv_saving_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Savings Trend (₱)"
                android:textStyle="bold"
                android:textColor="@color/dark_green"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_margin="10dp"/>

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/bar_chart_savings"
                android:layout_width="350dp"
                android:layout_height="400dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:background="@color/white"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>




</FrameLayout>