<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".childDashboardModule.fragments.FinancialAssessmentsDetailsFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_balance"
        android:layout_width="match_parent"
        app:cardElevation="5dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="20dp">

            <TextView
                android:id="@+id/tv_goal_setting_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This Month's Goal Setting Scores Assessment Trend"
                android:textStyle="bold"
                android:textColor="@color/dark_green"
                android:textSize="20sp"
                android:layout_marginTop="1dp"
                android:gravity="center"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(Click the empty space below to see the graph) "
                android:textStyle="bold"
                android:textColor="@color/light_green"
                android:textSize="16sp"
                android:layout_margin="5dp"
                android:gravity="center"
                />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/goal_setting_chart"
                android:layout_width="330dp"
                android:layout_height="430dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/tv_saving_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This Month's Saving Scores Assessment Trend"
                android:textStyle="bold"
                android:textColor="@color/dark_green"
                android:textSize="20sp"
                android:layout_marginTop="1dp"
                android:gravity="center"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(Click the empty space below to see the graph) "
                android:textStyle="bold"
                android:textColor="@color/light_green"
                android:textSize="16sp"
                android:layout_margin="5dp"
                android:gravity="center"
                />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/saving_chart"
                android:layout_width="330dp"
                android:layout_height="430dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/tv_spending_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This Month's Spending Assessment Scores Trend"
                android:textStyle="bold"
                android:textColor="@color/dark_green"
                android:textSize="20sp"
                android:layout_marginTop="1dp"
                android:gravity="center"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(Click the empty space below to see the graph) "
                android:textStyle="bold"
                android:textColor="@color/light_green"
                android:textSize="16sp"
                android:layout_margin="5dp"
                android:gravity="center"
                />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/spending_chart"
                android:layout_width="330dp"
                android:layout_height="430dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/tv_budgeting_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This Month's Budgeting Assessment Scores Trend"
                android:textStyle="bold"
                android:textColor="@color/dark_green"
                android:textSize="20sp"
                android:layout_marginTop="1dp"
                android:gravity="center"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(Click the empty space below to see the graph) "
                android:textStyle="bold"
                android:textColor="@color/light_green"
                android:textSize="16sp"
                android:layout_margin="5dp"
                android:gravity="center"
                />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/budgeting_chart"
                android:layout_width="330dp"
                android:layout_height="430dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</FrameLayout>