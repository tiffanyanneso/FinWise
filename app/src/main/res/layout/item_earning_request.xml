<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginBottom="10dp"
    app:cardBackgroundColor="@color/very_light_green">

    <TextView
        android:id="@+id/tv_earning_activity_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_child_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_gravity="center_vertical">

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Activity Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:layout_weight="@integer/material_motion_duration_short_1" />


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="Peso logo"
                android:src="@drawable/profile_person"
                android:text="P"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                app:tint="@color/black" />

            <TextView
                android:id="@+id/tV_child_name"
                android:layout_below="@id/linear_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="ChildName"
                android:textSize="16sp"
                android:maxLines="1"
                android:layout_weight="40" />

        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>