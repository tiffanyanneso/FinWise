                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:text=""
                                android:textColor="@color/dark_green"
                                android:textStyle="bold"
                                android:layout_gravity="center"/>
                        </LinearLayout>

                        <TextView
