<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".financialActivitiesModule.childActivitiesFragment.GoalSettingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:id="@+id/tv_overall_rating"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="24dp"
                            android:text="X.X"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:gravity="center"/>

                        <RatingBar
                            android:id="@+id/rating_bar_overall"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:numStars="5"
                            android:stepSize="0.5"
                            android:scaleX="0.5"
                            android:scaleY="0.5"
                            android:layout_gravity="center"
                            android:progressTint="@color/yellow"
                            android:progressBackgroundTint="@color/light_grey" />

                        <TextView
                            android:id="@+id/tv_number_ratings"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:text="X Ratings"
                            android:textColor="@color/black"
                            android:gravity="center"/>
                    </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="220dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/specific"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:gravity="center_vertical" />

                    <ProgressBar
                        android:id="@+id/progress_bar_specific"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:scaleY="4"
                        android:layout_weight="1.25"
                        android:layout_marginRight="10dp"
                        android:max="5"/>

                    <TextView
                        android:id="@+id/rating_specific"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="x/5"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="220dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/measureable"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:gravity="center_vertical" />

                    <ProgressBar
                        android:id="@+id/progress_bar_measurable"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:scaleY="4"
                        android:layout_weight="1.25"
                        android:layout_marginRight="10dp"
                        android:max="5"/>

                    <TextView
                        android:id="@+id/rating_measurable"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="x/5"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="220dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/achievable"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:gravity="center_vertical" />

                    <ProgressBar
                        android:id="@+id/progress_bar_achievable"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:scaleY="4"
                        android:layout_weight="1.25"
                        android:layout_marginRight="10dp"
                        android:max="5"/>

                    <TextView
                        android:id="@+id/rating_achievable"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="x/5"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="220dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Relevant"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:gravity="center_vertical" />

                    <ProgressBar
                        android:id="@+id/progress_bar_relevant"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:scaleY="4"
                        android:layout_weight="1.25"
                        android:layout_marginRight="10dp"
                        android:max="5"/>

                    <TextView
                        android:id="@+id/rating_relevant"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="x/5"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="220dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/time_bound"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:gravity="center_vertical" />

                    <ProgressBar
                        android:id="@+id/progress_bar_time"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:scaleY="4"
                        android:layout_weight="1.25"
                        android:layout_marginRight="10dp"
                        android:max="5"/>

                    <TextView
                        android:id="@+id/rating_time"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="x/5"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_layout_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="My Goals"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:layout_gravity="center"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_new_goal"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:text="@string/new_goal"
                        android:textColor="@color/off_white"
                        android:backgroundTint="@color/dark_green"
                        android:background="@drawable/button_border"/>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_view_goals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/item_finact_saving"/>
                </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>