<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".financialAssessmentModuleFinlitExpert.FinlitExpertAssessmentTypeActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:titleCentered="true"
            app:title="Assessment Type"
            app:menu="@menu/top_app_bar"
            app:navigationIcon="@drawable/baseline_arrow_back_24"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:backgroundTint="@color/dark_green"
            />
    </com.google.android.material.appbar.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginTop="50dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <!--  First Category layout-->
        <LinearLayout
            android:id="@+id/btn_preliminary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/layout_bg_green"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="20dp">

            <ImageView
                android:src="@drawable/baseline_assignment_ind_24"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:tint="@color/very_light_green" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:textStyle="bold"
                android:layout_weight="5"/>

            <TextView
                android:id="@+id/tv_preliminary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Preliminary"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>

        <!--  Third Category layout-->
        <LinearLayout
            android:id="@+id/btn_pre_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/layout_bg_green"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="20dp">

            <ImageView
                android:src="@drawable/baseline_assignment_late_24"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:tint="@color/dark_green" />

            <TextView
                android:id="@+id/tv_preactivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pre-Activity"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_gravity="center"/>
        </LinearLayout>


        <!--  Third Category layout-->
        <LinearLayout
            android:id="@+id/btn_post_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/layout_bg_green"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="20dp">

            <ImageView
                android:src="@drawable/baseline_assignment_turned_in_24"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:tint="@color/teal_700" />

            <TextView
