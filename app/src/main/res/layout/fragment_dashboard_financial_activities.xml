<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".childDashboardModule.fragments.DashboardFinancialActivitiesFragment"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:id="@+id/layout_loading"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center">

        <ProgressBar
            android:id="@+id/pb_loading"
            android:layout_width="100dp"
            android:layout_height="100dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/gradient_pfm_card">
                <!--<TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Financial Activities Score"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"/>-->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Financial Activities Performance"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="center"/>

                    <ImageView
                        android:id="@+id/btn_audio_financial_activities_score"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/baseline_mic_24"
                        app:tint="@color/light_grey"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="5dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp">

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/button_border_white"
                        android:backgroundTint="@color/white"
                        android:padding="10dp">

                        <ImageView
                            android:src="@drawable/loading"
                            android:id="@+id/iv_score"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"/>

                        <TextView
                            android:id="@+id/tv_performance_percentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            tools:text="" />

                        <TextView
                            android:id="@+id/tv_performance_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="Loading"
                            android:textColor="@color/light_green"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:textAlignment="center"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_performance_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="You will see here your total financial score combined from the other modules."
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_goal_setting_performance"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="Goal Setting"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ProgressBar
                            android:id="@+id/progress_bar_goal_setting"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:scaleY="4"
                            android:max="100"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/tv_goal_setting_percentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="xxx%"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_marginLeft="8dp"/>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="Saving"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/linear_layout_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ProgressBar
                        android:id="@+id/progress_bar_saving"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:scaleY="4"
                        android:max="100"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/tv_saving_performance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="xxx%"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginLeft="8dp"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="Budgeting"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ProgressBar
                        android:id="@+id/progress_bar_budegting"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:scaleY="4"
                        android:max="100"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/tv_budgeting_performance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="xxx%"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginLeft="8dp"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="Spending"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ProgressBar
                        android:id="@+id/progress_bar_spending"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:scaleY="4"
                        android:max="100"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/tv_spending_performance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="xxx%"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginLeft="8dp"/>
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_see_more"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Financial Activities"
                    android:textColor="@color/off_white"
                    android:backgroundTint="@color/dark_green"
                    android:background="@drawable/button_border"
                    android:layout_marginTop="10dp"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_balance_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This Month's Financial Activities Score Trend"
            android:textStyle="bold"
            android:textColor="@color/dark_green"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:layout_marginBottom="10dp"/>


        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/financial_activities_chart"
            android:layout_width="320dp"
            android:layout_height="450dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Ongoing Activities"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linear_layout_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ll_goal_setting"
                android:orientation="vertical"
                android:padding="10dp"
                android:visibility="gone"
                android:background="@drawable/layout_bg_green"
                android:backgroundTint="@color/dark_green"
                android:layout_weight="1"
                android:layout_marginRight="7dp"
                >

                <TextView
                    android:id="@+id/tv_goal_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="X"
                    android:textAllCaps = "true"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="Goal Setting"
                    android:textAllCaps = "true"
                    android:textColor="@color/white"
                    android:textAlignment="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@drawable/layout_bg_green"
                android:backgroundTint="@color/dark_green"
                android:layout_weight="1"
                android:layout_marginRight="7dp">

                <TextView
                    android:id="@+id/tv_saving"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="X"
                    android:textAllCaps = "true"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="Saving"
                    android:textAllCaps = "true"
                    android:textColor="@color/white"
                    android:textAlignment="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@drawable/layout_bg_green"
                android:backgroundTint="@color/dark_green"
                android:layout_weight="1"
                android:layout_marginRight="5dp">

                <TextView
                    android:id="@+id/tv_budgeting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="X"
                    android:textAllCaps = "true"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="Budgeting"
                    android:textAllCaps = "true"
                    android:textColor="@color/white"
                    android:textAlignment="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@drawable/layout_bg_green"
                android:backgroundTint="@color/dark_green"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_spending"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="X"
                    android:textAllCaps = "true"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="Spending"
                    android:textAllCaps = "true"
                    android:textColor="@color/white"
                    android:textAlignment="center"/>
            </LinearLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
</LinearLayout>
</FrameLayout>