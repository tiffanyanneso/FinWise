<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".personalFinancialManagementModule.PersonalFinancialManagementActivity"
    android:background="@color/off_white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cv_current_balance"
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:elevation="5dp"
            android:layout_marginEnd="20dp"
            android:layout_height="110dp"
            card_view:cardBackgroundColor="@color/light_green"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="20dp"
            card_view:cardCornerRadius="10dp">

            <LinearLayout
                android:id="@+id/linear_layout_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"

                >
                <ImageView
                    android:src="@drawable/peso_coin"
                    android:contentDescription="Peso logo"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:text="P"
                    />

                <LinearLayout
                    android:id="@+id/linear_layout_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/current_balance_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="CURRENT BALANCE"
                        android:textAllCaps ="true"
                        android:textColor="@color/white"
                        android:paddingTop="10dp"
                        />

                    <TextView
                        android:id="@+id/tv_balance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:text="â‚± XXXX.XX"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/linear_layout_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/cv_current_balance"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_expense"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="- EXPENSE"
                android:textColor="@color/white"
                android:backgroundTint="@color/red"
                android:background="@drawable/button_border_grey"
                android:layout_marginRight="10dp"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_goal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="+ DEPOSIT"
                android:textColor="@color/white"
                android:backgroundTint="@color/yellow"
                android:background="@drawable/button_border_grey"
                android:layout_marginRight="10dp"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_income"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:text=" + INCOME"
                android:textColor="@color/off_white"
                android:backgroundTint="@color/dark_green"
                android:background="@drawable/button_border"
                />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cv_savings"
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            app:cardElevation="5dp"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linear_layout_2"
            card_view:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                android:id="@+id/tv_savings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Savings Trend"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_margin="10dp"/>

            <com.jjoe64.graphview.GraphView
                android:id="@+id/savings_line_graph"
                android:layout_width="350dp"
                android:layout_height="250dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:background="@color/black"
                android:layout_below="@id/tv_savings" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cv_balance"
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:elevation="5dp"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@color/light_green"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_savings"
            card_view:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_balance_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Balance Trend"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:layout_margin="10dp"/>

                <com.jjoe64.graphview.GraphView
                    android:id="@+id/balance_line_graph"
                    android:layout_width="350dp"
                    android:layout_height="250dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center"
                    android:layout_below="@id/tv_savings" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/abl_breakdown"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="15dp"
            app:layout_constraintTop_toBottomOf="@id/cv_balance">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabBackground="@color/off_white"
                app:tabGravity="fill"
                app:tabMode="fixed"
                app:tabTextColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_view_all"/>

        </com.google.android.material.appbar.AppBarLayout>


        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="560dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/abl_breakdown">

        </androidx.viewpager.widget.ViewPager>

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cv_transactions"
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@color/light_green"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_pager"
            card_view:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp">

            <TextView
                android:id="@+id/tv_transactions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transactions"
                card_view:layout_constraintTop_toTopOf="parent"
                android:textSize="18sp"
                card_view:layout_constraintStart_toStartOf="parent"
                android:layout_margin="10dp"
                android:layout_gravity="start"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tv_view_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:layout_constraintTop_toTopOf="parent"

                card_view:layout_constraintEnd_toEndOf="parent"
                android:text="View All"
                android:textSize="18sp"
                android:layout_margin="10dp"
                android:layout_gravity="end"
                android:textColor="@color/teal_200"/>

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_view_transactions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:backgroundTint="@color/white"
                tools:listitem="@layout/item_transaction" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>


    <!--Bottom navigation bar-->
    <com.google.android.material.bottomnavigation.BottomNavigationView
    android:id="@+id/bottom_nav"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:menu="@menu/bottom_nav"
    android:background="#FFFFFF"
    app:labelVisibilityMode="labeled"
    app:itemIconSize="36dp"
    app:itemIconTint="@drawable/selector"/>





</androidx.constraintlayout.widget.ConstraintLayout>

