<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".childDashboardModule.fragments.DashboardFinancialAssessmentsFragment"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:id="@+id/layout_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ProgressBar
            android:id="@+id/pb_loading"
            android:layout_width="100dp"
            android:layout_height="100dp"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_main"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginBottom="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/gradient_pfm_card">
              <!--  <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Financial Assessment Score"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"/>
                -->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Financial Assessment Performance"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="center"/>

                    <ImageView
                        android:id="@+id/btn_audio_financial_assessment_score"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/baseline_mic_24"
                        app:tint="@color/light_grey"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="5dp"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/button_border_white"
                        android:backgroundTint="@color/white"
                        android:padding="10dp">

                        <ImageView
                            android:src="@drawable/loading"
                            android:id="@+id/iv_score"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"/>

                        <TextView
                            android:id="@+id/tv_performance_percentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            tools:text="" />

                        <TextView
                            android:id="@+id/tv_performance_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="Loading"
                            android:textColor="@color/light_green"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:textAlignment="center"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_performance_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="You will see here your total financial score combined from the other modules."
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"/>
                </LinearLayout>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_see_more"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Financial Assessments"
                    android:textColor="@color/off_white"
                    android:backgroundTint="@color/dark_green"
                    android:background="@drawable/button_border"
                    android:layout_marginTop="10dp"
                    />
                <!--<LinearLayout
                    android:id="@+id/layout_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="10dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_review_saving"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Review"
                        android:textColor="@color/off_white"
                        android:backgroundTint="@color/dark_green"
                        android:background="@drawable/button_border_grey"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_see_more2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="See More"
                        android:textColor="@color/off_white"
                        android:backgroundTint="@color/dark_green"
                        android:background="@drawable/button_border"
                        android:layout_weight="1" />

                </LinearLayout>-->

            </LinearLayout>



        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_balance_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This Month's Financial Assessment's Trend"
            android:textStyle="bold"
            android:textColor="@color/dark_green"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:layout_marginBottom="10dp"/>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/financial_assessment_chart"
            android:layout_width="320dp"
            android:layout_height="450dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:layout_marginBottom="20dp"/>

        <!--<androidx.appcompat.widget.AppCompatButton
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:id="@+id/btn_details"
            android:layout_gravity="center"
            android:text="View Details"
            android:textSize="12sp"
            android:background="@drawable/button_border_white"
            android:backgroundTint="@color/dark_green"
            android:textColor="@color/white"/>-->




    </LinearLayout>


</FrameLayout>