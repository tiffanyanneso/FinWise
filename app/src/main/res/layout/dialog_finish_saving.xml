<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp">

    <ImageView
        android:id="@+id/img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/baseline_access_time_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:tint="@color/red" />

        <TextView
            android:id="@+id/tv_new_category"
            app:layout_constraintTop_toBottomOf="@id/img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Finish Saving First"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <LinearLayout
            android:id="@+id/linear_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_new_category"
            app:layout_constraintBottom_toTopOf="@id/btn_ok"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="16dp"
                android:text="Finish saving for your goal proceeding to the next activity. Come back once you're done saving!"
                android:textColor="@color/black"
                android:textAlignment="center"/>
        </LinearLayout>
    <Button
        android:id="@+id/btn_ok"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text = "Ok"/>
</androidx.constraintlayout.widget.ConstraintLayout>